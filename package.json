{
  "name": "diagnochain-mvp",
  "version": "1.0.0",
  "description": "Decentralized healthcare consultation platform with Bitcoin rewards",
  "main": "backend/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "start": "node backend/src/server.js",
    "build": "npm run frontend:build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:contracts",
    
    "backend:dev": "nodemon backend/src/server.js",
    "backend:start": "node backend/src/server.js",
    "backend:test": "jest backend/tests --coverage",
    "backend:test:watch": "jest backend/tests --watch",
    
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build", 
    "frontend:test": "cd frontend && npm test",
    
    "contracts:compile": "hardhat compile",
    "contracts:deploy": "node scripts/deployment/deploy.js deploy",
    "contracts:deploy:test": "node scripts/deployment/deploy.js deploy-test",
    "contracts:deploy:mainnet": "node scripts/deployment/deploy.js mainnet",
    "contracts:verify": "node scripts/deployment/deploy.js verify",
    "contracts:test": "hardhat test",
    "contracts:coverage": "hardhat coverage",
    "contracts:size": "hardhat size-contracts",
    
    "db:migrate": "node database/migrations/migrations.js",
    "db:seed": "node database/seeds/seedData.js",
    "db:reset": "node database/migrations/migrations.js reset",
    "db:backup": "pg_dump $DATABASE_URL > backups/$(date +%Y%m%d_%H%M%S).sql",
    
    "bitcoin:start": "node bitcoin/bitcoinAPI.js",
    "bitcoin:test": "jest bitcoin/tests",
    "lightning:check": "node scripts/utilities/checkLightning.js",
    
    "ipfs:test": "node scripts/utilities/testIPFS.js",
    "oracle:update": "node scripts/utilities/updatePrices.js",
    
    "lint": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,sol}\"",
    "type-check": "tsc --noEmit",
    
    "security:audit": "npm audit && slither contracts/",
    "security:test": "jest tests/security",
    
    "docker:build": "docker build -t diagnochain:latest .",
    "docker:run": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    
    "deploy:staging": "npm run build && npm run contracts:deploy && npm run db:migrate",
    "deploy:production": "npm run security:audit && npm run build && npm run contracts:deploy:mainnet",
    
    "clean": "rm -rf node_modules frontend/node_modules frontend/build backend/dist",
    "reinstall": "npm run clean && npm install && cd frontend && npm install",
    
    "setup:dev": "npm install && cd frontend && npm install && npm run contracts:compile && npm run db:migrate && npm run db:seed",
    "setup:prod": "npm ci && cd frontend && npm ci && npm run build && npm run db:migrate",
    
    "monitor:health": "curl http://localhost:3001/health",
    "monitor:logs": "tail -f logs/application.log",
    
    "tools:estimate-gas": "node scripts/utilities/estimateGas.js",
    "tools:generate-wallets": "node scripts/utilities/generateWallets.js",
    "tools:check-balances": "node scripts/utilities/checkBalances.js"
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "bitcoin",
    "ethereum", 
    "telemedicine",
    "smart-contracts",
    "lightning-network",
    "nft",
    "defi"
  ],
  "author": "DiagnoChain Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diagnochain/mvp"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    
    "web3": "^4.1.1",
    "ethers": "^5.7.2",
    "@openzeppelin/contracts": "^4.9.3",
    
    "bitcoinjs-lib": "^6.1.3",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    
    "axios": "^1.5.0",
    "form-data": "^4.0.0",
    "ws": "^8.14.0",
    
    "node-cron": "^3.0.2",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    
    "joi": "^17.10.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "solidity-coverage": "^0.8.4",
    "slither-analyzer": "^0.1.0",
    
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5",
    "jest-environment-node": "^29.6.4",
    
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    
    "typescript": "^5.2.2",
    "@types/node": "^20.6.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    
    "mocha": "^10.2.0",
    "chai": "^4.3.8",
    "sinon": "^15.2.0",
    
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "commitizen": "^4.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "workspaces": [
    "frontend",
    "backend", 
    "contracts"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/src/**/*.js",
      "bitcoin/**/*.js",
      "!backend/src/utils/logger.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "security/detect-object-injection": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write --plugin=prettier-plugin-solidity"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "files": [
    "backend/src/",
    "bitcoin/",
    "contracts/",
    "config/",
    "scripts/",
    "database/schemas/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "backend/src",
    "test": "tests",
    "doc": "docs"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/diagnochain"
  }
}